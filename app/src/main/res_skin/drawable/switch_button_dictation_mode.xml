<?xml version="1.0" encoding="utf-8"?>
<selector android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ffd8f7ff" />
            <corners android:radius="@dimen/y30" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#55000000" />
            <corners android:radius="@dimen/y30" />
        </shape>
    </item>
</selector>